// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("client") // client, service_provider, master_admin
  isMasterAdmin Boolean   @default(false) // Master admin can see all accounts
  companyName   String?   // Company name for clients
  ownedOrganization Organization? @relation("OrganizationOwner") // Organization owned by this user (service provider)
  accounts      Account[]
  sessions      Session[]
  tasks         Task[]
  products      Product[]
  clientProviders ClientProvider[] // Clients linked to service providers
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Task {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  organizationId String? // Service provider organization this task belongs to
  organization  Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  title       String?
  status      String    @default("draft") // draft, in_progress, completed, cancelled
  clientName  String?
  clientEmail String?
  productName String?
  productDescription String? @db.Text
  deadline    DateTime?
  estimatedPrice Decimal? @db.Decimal(10, 2)
  finalPrice   Decimal? @db.Decimal(10, 2)
  messages     Message[]
  assets       Asset[]
  metadata     Json? // Store additional structured data from chat
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  role      String   // user, assistant, system
  content   String   @db.Text
  metadata  Json?    // Store any additional message data
  createdAt DateTime @default(now())
}

model Asset {
  id          String   @id @default(cuid())
  taskId      String
  task        Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  filename    String
  originalName String
  mimeType    String
  size        Int      // in bytes
  url         String   // Storage URL
  metadata    Json?    // Store image analysis (OCR, description, etc.)
  createdAt   DateTime @default(now())
}

model Pricing {
  id          String   @id @default(cuid())
  name        String   // e.g., "Video Production", "Graphic Design"
  category    String   // e.g., "video", "design", "web", "social"
  basePrice   Decimal  @db.Decimal(10, 2)
  minPrice    Decimal? @db.Decimal(10, 2)
  maxPrice    Decimal? @db.Decimal(10, 2)
  description String?  @db.Text
  multipliers Json?    // Store complexity multipliers as JSON
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  organizationId String? // Service provider organization
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  name        String   // e.g., "Video Production", "Graphic Design", "Web Development"
  description String?  @db.Text // Brief description of the service
  keywords    String[] // Keywords to help AI identify service requests (e.g., ["video", "film", "animation"])
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  organizationId  String?  // Service provider organization
  organization    Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  name            String   // Product/brand name
  websiteUrl      String?  // Brand website URL
  productType     String?  // Type/category of product (inferred from analysis)
  brandGuidelines String?  @db.Text // Generated brand guidelines (markdown)
  analysisData    Json?    // Full analysis data (brand essence, target audience, etc.)
  googleDriveDocId String? // Google Drive document ID if saved
  status          String   @default("pending") // pending, analyzing, completed, failed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([name])
}

// Organization/Service Provider model
model Organization {
  id              String   @id @default(cuid())
  name            String   // Organization/service provider name
  slug            String   @unique // URL-friendly identifier
  ownerId        String   @unique // User who owns this organization (service provider)
  owner          User     @relation("OrganizationOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  inviteCode     String   @unique // Unique code for clients to join
  inviteLink     String   @unique // Generated invite link
  subscription   Subscription?
  tasks           Task[]
  products        Product[]
  clientProviders ClientProvider[] // Clients linked to this organization
  services        Service[] // Services offered by this organization
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([ownerId])
  @@index([inviteCode])
}

// Subscription model for service providers
model Subscription {
  id              String   @id @default(cuid())
  organizationId  String   @unique
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  plan            String   // "1_month", "3_month", "6_month"
  status          String   @default("active") // active, cancelled, expired
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  clientCount     Int      @default(0) // Number of clients
  stripeCustomerId String? // Stripe customer ID
  stripeSubscriptionId String? // Stripe subscription ID
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Client-Provider relationship (many-to-many)
model ClientProvider {
  id             String   @id @default(cuid())
  clientId       String
  client         User     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  joinedAt       DateTime @default(now())

  @@unique([clientId, organizationId])
  @@index([clientId])
  @@index([organizationId])
}
